@page
@model Web.Pages.MyStacks.FlashCards.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Flash Card</h1>

<h3>Are you sure you want to delete this flash card?</h3>
<hr />
<div>
    <h4>FlashCard</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlashCard.Front)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlashCard.Front)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlashCard.Back)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlashCard.Back)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlashCard.Stack)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlashCard.Stack.Name)
        </dd>
        <dt class="col-sm-2">
            Card#
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlashCard.Order)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="FlashCard.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-route-id="@Model.FlashCard.StackId" asp-page="../stack">Back to Stack</a>
    </form>
</div>
