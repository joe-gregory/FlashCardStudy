@page
@model Web.Pages.MyStacks.StudySessions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudySessions[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudySessions[0].EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudySessions[0].Turns)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudySessions[0].Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudySessions[0].RightScores)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudySessions[0].WrongScores)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudySessions[0].Stack)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.StudySessions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Turns)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)%
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RightScores)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WrongScores)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stack.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
